<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HICHEM.Views.Login.ForgotPasswordPage">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Margin="20, 10, 10, 10">
          <Label HorizontalOptions="CenterAndExpand" Text="Please enter the email address below" />
            <Entry x:Name="emailForgot" HorizontalOptions="FillAndExpand" Placeholder="email" HeightRequest="35" />
            <Button x:Name="getPassword" BackgroundColor="Olive" Text="GET PASSWORD" TextColor="White" HorizontalOptions="FillAndExpand" />
            <Label x:Name="warning" Text="Not match user with email you entered or uername/password was not set." TextColor="Red" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"/>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
