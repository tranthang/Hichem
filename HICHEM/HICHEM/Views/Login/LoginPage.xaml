<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HICHEM.Views.Login.LoginPage" BackgroundColor="#CCCCCC">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="10, 0, 10, 0" VerticalOptions="CenterAndExpand">
            <Entry x:Name="userName" HeightRequest="40" HorizontalOptions="FillAndExpand" Placeholder="email" BackgroundColor="#EEEEEE" />
            <Entry x:Name="passWord" HeightRequest="40" HorizontalOptions="FillAndExpand" Placeholder="password" BackgroundColor="#EEEEEE"/>
            <Button x:Name="login" HorizontalOptions="FillAndExpand" Text="Login" BackgroundColor="#69A175" TextColor="White"/>
            <Label x:Name="forgotPassword" HorizontalOptions="CenterAndExpand" Text="Forgot Password?" TextColor="#3F749A"/>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
